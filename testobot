import telebot
import logging
from telebot import types

TOKEN = '249430682:AAGPbuoGYllOPbPsZyFkuJHY7ooI_aLsAVU'
bot = telebot.TeleBot(TOKEN) #create a new Telegram Bot object
logger = telebot.logger
telebot.logger.setLevel(logging.DEBUG) # Outputs debug messages to console.
logger = logging.getLogger(__name__)

@bot.message_handler(commands=['start', 'help'])
def send_welcome(message):
    bot.reply_to(message, "Howdy, how are you doing?")

@bot.message_handler(func=lambda message: True)
def echo_all(message):
    bot.reply_to(message, message.text)

# No Google Maps on my phone, so this function is untested, should work fine though.
@bot.message_handler(func=lambda message: message.chat.id == config.my_id, content_types=["location"])
def my_location(message):
    if message.reply_to_message:
        bot.send_location(message.reply_to_message.forward_from.id, latitude=message.location.latitude,
                          longitude=message.location.longitude)
    else:
        bot.send_message(message.chat.id, get_string("nobody_to_reply", config.language))

bot.polling()